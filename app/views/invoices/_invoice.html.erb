<div class="card" style="width: 38rem;">
  <div class="card-header">
    <div id="status" class="<%= badge_color(invoice.status) %>"><%= invoice.status %></div>
    <h5 class="card-title"><%= invoice.client.name %> INV - <%= invoice.id %></h5>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Due on - <%= invoice.due_date.strftime("%d %b, %Y") %></li>
    <li class="list-group-item"><%= link_to "Show this invoice", invoice %></li>
  </ul>
</div>

<style type="text/css">
  #status{
    float: right;
  }
</style>
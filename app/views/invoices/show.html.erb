<p style="color: green"><%= notice %></p>

<div class="card" style="width: 38rem;">
  <div class="card-header">
    <div id="status" class="<%= badge_color(@invoice.status) %>"><%= @invoice.status %></div>
    <h5 class="card-title">INV - <%= @invoice.id %></h5>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Due on - <%= @invoice.due_date.strftime("%d %b, %Y") %></li>
    <li class="list-group-item"><a href="#" class="card-link">Send Invoice</a></li>
    <li class="list-group-item"><a href="#" class="card-link">Payment</a></li>
  </ul>
</div>


<div>
  <table class="table table-striped">
    <thead>
      <th>LineItem ID</th>
      <th>Description</th>
      <th>Amount</th>
      <th>Quntity</th>
      </thead>
    <tbody>
      <% if @invoice.line_items.present? %>
        <% @invoice.line_items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= item.description %></td>
            <td><%= item.amount %></td>
            <td><%= item.quntity %></td>
          </tr>
        <% end %>
      <% else %>
          <tr><td colspan="4">No Data</td></tr>
      <% end %>

    </tbody>
  </table>
</div>